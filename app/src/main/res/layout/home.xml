<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout style="@style/cardsListStyle">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="6"
            android:columnCount="4"
            android:orientation="horizontal">

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/classc2"
                android:text="班级"
                android:textAllCaps="false" />

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/teacher2"
                android:text="找家教" />

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/course2"
                android:text="课程" />

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/mark"
                android:text="成绩"/>

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/books"
                android:text="资料"/>

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ask"
                android:text="问答"/>


        </GridLayout>

        <LinearLayout
            android:id="@+id/teachershow"
            style="@style/cardStyle"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_teachershow"
                style="@style/cardHeaderStyle"
                android:text="老师风采---"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar"
            style="@style/cardStyle">

            <TextView
                android:id="@+id/tv_bar"
                style="@style/cardHeaderStyle"
                android:text="bar" />

            <LinearLayout
                android:id="@+id/llHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
